:MAKEFILE:
cc=gcc
CFLAGS= -std=c11

BIN=main
all:$(BIN)

%: %.c
        $(CC) $(CFLAGS) -o $@ $<


:MAIN.C:
#include <stdlib.h>
#include <stdio.h>
#include <fcntl.h>
#include <stdbool.h>
#include <unistd.h>
#include <sys/wait.h>

#define infinite 9999

void climberRec(int** map, int** cost, int X, int Y) {

	bool sorted = false;
	while (!sorted) {
		for (int y = 0; y < Y; y++) {
			for (int x = 0; x < X; x++) {
				if (map[x][y] == 'S') {
					if (x != 0) {
						//left
						if (map[x - 1][y] == 'a') {
							cost[x - 1][y] = 1;
						}
					}
					if (x < X - 1) {
						//right
						if (map[x + 1][y] == 'a') {
							cost[x + 1][y] = 1;
						}
					}
					if (y != 0) {
						//up
						if (map[x][y - 1] == 'a') {
							cost[x][y - 1] = 1;
						}
					}
					if (y < Y - 1) {
						//down
						if (map[x][y + 1] == 'a') {
							cost[x][y + 1] = 1;
						}
					}
				}
				if (map[x][y] == 'z'&cost[x][y]!=infinite) {
					if (x != 0) {
						//left
						if (map[x - 1][y] == 'E') {
							cost[x - 1][y] = cost[x][y] + 1;
							sorted = true;
						}
					}
					if (x < X - 1) {
						//right
						if (map[x + 1][y] == 'E') {
							cost[x + 1][y] = cost[x][y] + 1;
							sorted = true;

						}
					}
					if (y != 0) {
						//up
						if (map[x][y - 1] == 'E') {
							cost[x][y - 1] = cost[x][y] + 1;
							sorted = true;

						}
					}
					if (y < Y - 1) {
						//down
						if (map[x][y + 1] == 'E') {
							cost[x][y + 1] = cost[x][y] + 1;
							sorted = true;

						}
					}
				}
				if (cost[x][y] != infinite) {
					if (x != 0) {
						//left
						if (map[x - 1][y] - map[x][y] <=1&& map[x - 1][y] - map[x][y] >=-26) {
							if (cost[x - 1][y] > cost[x][y] + 1) { cost[x - 1][y] = cost[x][y] + 1; }
						}
					}
					if (x < X - 1) {
						//right
						if (map[x + 1][y] - map[x][y] <= 1 && map[x + 1][y] - map[x][y] >=-26) {
							if (cost[x + 1][y] > cost[x][y] + 1) { cost[x + 1][y] = cost[x][y] + 1; }
						}
					}
					if (y != 0) {
						//up
						if (map[x][y-1] - map[x][y] <= 1 && map[x][y - 1] - map[x][y]>=-26) {
							if (cost[x][y - 1] > cost[x][y] + 1) { cost[x][y - 1] = cost[x][y] + 1; }
						}
					}
					if (y < Y - 1) {
						//down
						if (map[x][y+1] - map[x][y] <= 1 && map[x][y + 1] - map[x][y]>=-26) {
							if (cost[x][y + 1] > cost[x][y] + 1) { cost[x][y + 1] = cost[x][y] + 1; }
						}
					}
				}
			}
		}
		//for (int y = 0; y < Y; y++) {
		//	for (int x = 0; x < X; x++) {
		//		if (cost[x][y] == infinite) { printf(". "); }
		//		else { printf("%c%d ", map[x][y], cost[x][y]); }
		//	}
		//	printf("\n");
		//}
		//for (int y = 0; y < Y; y++) {
		//	for (int x = 0; x < X; x++) {
		//		if (map[x][y] == 'z') {
		//			printf("%c: %d\n",map[x][y], cost[x][y]);
		//		}
		//	}
		//}
		//printf("\n");
	}
}

int** mapper(int* fd, int* C, int* L, bool cost) {
	char ch;
	int** map;
	int c = 0; int l = 0;

	//recreating the map matrix
	bool lined = false;
	while (read(*fd, &ch, 1)) {
		if (!lined) c++;
		if (ch == '\n') {
			l++;
			lined = true;
		}
	}
	c--;	//need to ignore the '\n' character
	*C = c;
	*L = l;

	//printf("%dx%d\n", l, c);

	lseek(*fd, 0, SEEK_SET);
	map = (int**)malloc(*C * sizeof(int*));
	for (int i = 0; i < *C; i++) {
		map[i] = (int*)malloc(*L * sizeof(int));
	}
	
	int x = 0, y = 0;
	while (read(*fd, &ch, 1)) {
		if (ch == '\n') { x = 0; y++; if ((read(*fd, &ch, 1)) != 1) break; }
		if (cost) { map[x][y] = infinite; }
		else {
			map[x][y] = ch;
		}
		x++;
	}

	return map;
}

void climber(int* fd) {
	
	int* C; int c = 0; C = &c;
	int* L; int l = 0; L = &l;
	int** map = mapper(fd, C, L, false);
	lseek(*fd, 0, SEEK_SET);
	int** cost = mapper(fd, C, L, true);

	for (int x = 0; x < *C; x++) {
		for (int y = 0; y < *L; y++) {
			if (map[x][y] == 'S') {
				cost[x][y] = 0;
			}
		}
	}

	climberRec(map, cost, c, l);

	for (int y = 0; y < *L; y++) {
		for (int x = 0; x < *C; x++) {
			if (cost[x][y] == infinite) { printf(". "); }
			else { printf("%c%d ", map[x][y], cost[x][y]); }
		}
		printf("\n");
	}

	for (int y = 0; y < *L; y++) {
		for (int x = 0; x < *C; x++) {
			if (map[x][y] == 'E') {
				printf("[PART 1] solution: %d\n", cost[x][y]);
			}
		}
	}
}

int main(int argc, char** argv) {

	int fd;

	if (argc != 2) { printf("error: wrong number of parameters\n"); exit(2); }
	if ((fd = open(argv[1], O_RDONLY)) < 0) { printf("error: unable to open the file %s\n", argv[1]); exit(2); }

	climber(&fd);

	return 0;
}
