for i in *
do
	if test -d $i -a -x $i
	then
		/home/leo/AdventOfCode22/day7/FCR.sh $i $2 $3 $4
		RETVAL=`cat $3`
		#checkfase
		if test $RETVAL -le 100000
		then
			echo $RETVAL >> $2
		fi
		SUM=`expr $SUM + $RETVAL`


#		SUM_CHILDREN=$SUM
