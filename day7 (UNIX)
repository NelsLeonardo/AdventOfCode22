#				OUT_OF_BOUND=1
#			fi
#			if test $OUT_OF_BOUND -eq 1
#			then
#				if test $RETVAL -le 100000
#				then
#					echo $RETVAL >> $2
#				fi
#			fi
#		fi
	fi
done

for i in *
do
	if test -f $i -a -r $i
	then
		#addfile
		VALUE=`cat $i`
		SUM=`expr $SUM + $VALUE`
	fi
done

echo $SUM > $3
echo $SUM >> $4

